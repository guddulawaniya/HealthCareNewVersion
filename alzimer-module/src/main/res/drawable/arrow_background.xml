<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom shadow -->
    <item android:right="0dp" android:left="0dp" android:top="4dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#55000000" /> <!-- semi-transparent black shadow -->
        </shape>
    </item>

    <!-- Main oval shape -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- replace with your desired color -->
            <stroke
                android:width="@dimen/_1sdp"
                android:color="#FF000000" /> <!-- stroke color -->
        </shape>
    </item>

</layer-list>