<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Album_view"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Back"
            android:textColor="@color/back_btn_clr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Delete"
            android:textColor="@color/F42121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mother"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Done"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/B05EEB"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/album_edit"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/top"
        android:layout_marginTop="@dimen/_40sdp"/>

    <TextView
        android:id="@+id/swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Swipe right to see more"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@+id/swipe"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/EED5FF"
        android:text="This album is a collection of moments from Mom’s daily life—simple things she loves and memories she cherishes. Here, you’ll find photos she’s taken of her favorite flowers, special places, and things that bring her joy. You’ll also hear her voice as she sings songs, tells stories, and shares little pieces of her heart.
These activities help Mom stay connected to the things that make her happy and keep her spirit bright. Each photo and recording is a reminder of who she is and the love she carries inside.
I’m grateful for these moments we’ve captured together, and I hope this album brings comfort and warmth to everyone who sees it."
        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:paddingTop="@dimen/_10sdp"
        android:gravity="start|top"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:lineHeight="@dimen/_16sdp"/>
    
    
    <ImageView
        android:id="@+id/nodescriptionimg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/EED5FF"
        android:src="@drawable/no_description_img"
        android:visibility="gone"/>



    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/EED5FF"
        android:text="This album is a collection of moments from Mom’s daily life—simple things she loves and memories she cherishes. Here, you’ll find photos she’s taken of her favorite flowers, special places, and things that bring her joy. You’ll also hear her voice as she sings songs, tells stories, and shares little pieces of her heart.
These activities help Mom stay connected to the things that make her happy and keep her spirit bright. Each photo and recording is a reminder of who she is and the love she carries inside.
I’m grateful for these moments we’ve captured together, and I hope this album brings comfort and warmth to everyone who sees it."
        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:paddingTop="@dimen/_10sdp"
        android:gravity="start|top"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:lineHeight="@dimen/_16sdp"
        android:visibility="gone"/>



</androidx.constraintlayout.widget.ConstraintLayout>