<?xml version="1.0" encoding="utf-8"?>

    
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_190sdp"

        android:layout_marginEnd="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/caregiver_background"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imagebackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:background="@color/F5B779">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/images"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/image_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Larry Ken"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_5sdp"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/relation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/relation_background"
                android:text="Husband"
                android:textColor="@color/F35B5B"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_25sdp"
                android:layout_gravity="center"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>