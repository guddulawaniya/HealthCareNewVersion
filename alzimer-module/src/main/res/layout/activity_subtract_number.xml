<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".SubtractNumber">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/cross"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/cross"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/gold"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:src="@drawable/gold"
                    android:scaleType="centerInside"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/timertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintStart_toEndOf="@+id/gold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageButton
                android:id="@+id/music"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/imageon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp">

            <View
                android:id="@+id/progressView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/level_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:text="15/16"
                android:fontFamily="@font/istok_web_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/progress"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/numberbox"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/instruction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/number_background">

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_80sdp"
                android:fontFamily="@font/istok_web_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/instruction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/istok_web_bold"
            app:layout_constraintTop_toBottomOf="@+id/numberbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:id="@+id/inputbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/instruction2"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputans"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/box"
                android:inputType="number"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:scaleType="centerInside"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/inputans"
                android:background="@android:color/transparent"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/done_btn" />
        </RelativeLayout>


        <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/next_button_disable_background"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/inter_tight_semibold"/>




        <ImageView
            android:id="@+id/centerOverlayImage"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/complete"
            android:visibility="gone"
            android:scaleType="centerInside" />

    </androidx.constraintlayout.widget.ConstraintLayout>
