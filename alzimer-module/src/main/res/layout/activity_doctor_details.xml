            android:layout_marginTop="@dimen/_8sdp"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See More"
