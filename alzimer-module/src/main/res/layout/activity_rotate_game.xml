<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".Rotate_game">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>



        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                tools:ignore="MissingConstraints">

                <ImageButton
                    android:id="@+id/cross"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/cross"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    tools:ignore="MissingConstraints" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/gold"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:src="@drawable/gold"
                        android:scaleType="centerInside"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/timertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:00"
                        android:textSize="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_semibold"
                        app:layout_constraintStart_toEndOf="@+id/gold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageButton
                    android:id="@+id/music"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/imageon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/top"
            android:layout_marginTop="@dimen/_15sdp">

            <View
                android:id="@+id/progressView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/level_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:text="8/16"
                android:fontFamily="@font/istok_web_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/progress"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
                android:id="@+id/correctimg"
                android:layout_width="0dp"
                android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.2"
                android:src="@drawable/smaller_box"
                android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@+id/question"
            app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/correctingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set this postion "
                app:layout_constraintTop_toBottomOf="@+id/correctimg"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="@color/dateColor"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/userimg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/big_box"
                app:layout_constraintTop_toBottomOf="@+id/correctingtext"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toTopOf="@+id/guideline_20"
                app:layout_constraintHeight_percent="0.29"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:rowCount="1"
                android:layout_gravity="center"
                android:columnCount="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline_20"
                android:layout_marginTop="@dimen/_10sdp"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins">

                <ImageButton
                    android:id="@+id/downbutton"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"
                    android:background="@drawable/arrow_background"
                    android:scaleType="centerInside"/>

                <ImageButton
                    android:id="@+id/upbutton"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_columnWeight="1"

                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/baseline_keyboard_arrow_up_24"
                    android:background="@drawable/arrow_background"
                    android:scaleType="centerInside"/>

                <ImageButton
                    android:id="@+id/rightbutton"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:background="@drawable/arrow_background"
                    android:scaleType="centerInside"/>

                <ImageButton
                    android:id="@+id/leftbutton"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/baseline_keyboard_arrow_left_24"
                    android:background="@drawable/arrow_background"
                    android:scaleType="centerInside"/>
            </GridLayout>


            <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/next_button_disable_background"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/inter_tight_semibold"/>



        <ImageView
            android:id="@+id/centerOverlayImage"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/complete"
            android:visibility="gone"
            android:scaleType="centerInside" />

    </androidx.constraintlayout.widget.ConstraintLayout>
