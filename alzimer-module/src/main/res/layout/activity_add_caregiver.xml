<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCaregiver"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Back"
            android:textColor="@color/back_btn_clr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Caregivers"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_19sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userdp"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/ring_circle"
        android:src="@drawable/dummy_img"
        android:padding="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/top"/>

    <ImageView
        android:id="@+id/imgUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/userdp"
        app:layout_constraintBottom_toBottomOf="@id/userdp"
        android:background="@drawable/blue_icon"
        android:src="@drawable/edit_icon"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="-40dp"/>


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userdp"
        android:text="Upload the Photo"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColorHint="@color/C928F8F"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:hint="Full Name"
                    android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/nameerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name is required"
                android:textColor="@color/red"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/istok_web"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@drawable/line"/>


            <EditText
                android:id="@+id/relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:textColorHint="@color/C928F8F"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:hint="Relation with patient"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:id="@+id/relationerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name is required"
                android:textColor="@color/red"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/istok_web"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/relation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/line"/>



            <EditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:textColorHint="@color/C928F8F"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:hint="Phone Number"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/phonenoerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name is required"
                android:textColor="@color/red"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/istok_web"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/phonenoerror"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/line"/>


            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:textColorHint="@color/C928F8F"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:hint="Address"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/addresserror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name is required"
                android:textColor="@color/red"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/istok_web"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/line"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/add_caregiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bookappoint_btn_bg"
        android:text="Save"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>