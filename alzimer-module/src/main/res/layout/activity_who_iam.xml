<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".WhoIAm">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whoiambackground"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Back"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who am I ?"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_19sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userdp"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/ring_circle"
                android:src="@drawable/caregiver_dp"
                app:layout_constraintTop_toBottomOf="@+id/top"/>

            <ImageView
                android:id="@+id/img_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/userdp"
                app:layout_constraintBottom_toBottomOf="@id/userdp"
                android:background="@drawable/blue_icon"
                android:src="@drawable/edit_icon"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_marginStart="-40dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rayn Cally"
                app:layout_constraintTop_toBottomOf="@+id/userdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_9sdp"
                android:textSize="@dimen/_18sdp"
                android:visibility="visible"/>


            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/userdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:background="@drawable/background_white_box"
                android:layout_marginTop="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:visibility="gone"
                android:textSize="@dimen/_18sdp"/>

            <TextView
                android:id="@+id/nameerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name is required"
                android:textColor="@color/red"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/istok_web"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/name_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Patient  information"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/C3E49C3"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/C3E49C3"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        show details -->

        <androidx.cardview.widget.CardView
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:visibility="visible"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/Age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="67 years"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/single_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/single_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+91 98765 43210"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

<!--        edit details -->

        <androidx.cardview.widget.CardView
            android:id="@+id/personal_info_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            tools:ignore="MissingConstraints"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"/>

                    <EditText
                        android:id="@+id/ageedit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="67 years"
                        android:singleLine="true"
                        android:inputType="number"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/ageediterror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age is required"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/istok_web"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_3sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/single_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    >
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"/>

                    <EditText
                        android:id="@+id/genderedit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:singleLine="true"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/genderediterror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender is required"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/istok_web"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_3sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/single_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"/>

                    <EditText
                        android:id="@+id/phonenoedit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="+91 98765 43210"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/inter_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/phonenoditerror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone no is required"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_9sdp"
                    android:fontFamily="@font/istok_web"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_3sdp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/caregiverinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Caregiverâ€™s information"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personal_info"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"/>


        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="You can add one or more caregivers for emergency contact or support."
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/caregiverinfo"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/caregiver_img"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>



        <TextView
            android:id="@+id/add_caregiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bookappoint_btn_bg"
            android:text="Add Caregiver"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>