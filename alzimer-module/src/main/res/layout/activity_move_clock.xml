    <FrameLayout
        android:id="@+id/clockContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Optional Clock Face Background -->
        <ImageView
            android:id="@+id/clockFace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clock"
            android:scaleType="fitCenter" />

        <!-- Minute Hand -->
        <View
            android:id="@+id/minuteHand"
            android:layout_width="4dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="center"
            android:translationY="-40dp" />

        <!-- Hour Hand -->
        <View
            android:id="@+id/hourHand"
            android:layout_width="6dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_gravity="center"
            android:translationY="-25dp" />
    </FrameLayout>


    <TextView
        android:id="@+id/instructionclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clockContainer"
        android:text="Use the handle to set the time on the clock."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/currentTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/instructionclock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_button_disable_background"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/inter_tight_semibold"/>




</androidx.constraintlayout.widget.ConstraintLayout>