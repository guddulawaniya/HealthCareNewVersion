<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".MoveClock">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/cross"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/cross"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                tools:ignore="MissingConstraints" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/gold"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:src="@drawable/gold"
                    android:scaleType="centerInside"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/timertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintStart_toEndOf="@+id/gold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageButton
                android:id="@+id/music"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/imageon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp">

            <View
                android:id="@+id/progressView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:background="@drawable/level_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:text="10/16"
                android:fontFamily="@font/istok_web_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp"
                android:gravity="center_horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintTop_toBottomOf="@+id/progress"
            android:textColor="@color/black"
            android:text="Move the clock hands to 3:45."
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"/>


