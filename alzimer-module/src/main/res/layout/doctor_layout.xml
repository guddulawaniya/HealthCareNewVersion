<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:background="@drawable/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dctr_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/doctor_img"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/dctr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Arjun Mehta"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Psychologist"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/doctor_specialization_clr"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"/>
        
        <TextView
            android:id="@+id/appointment_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:background="@drawable/appointment_bg"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:gravity="center"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/A524E2"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>