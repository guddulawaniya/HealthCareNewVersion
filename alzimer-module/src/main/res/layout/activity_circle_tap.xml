    <!-- Green Square (Centered) -->
    <ImageButton
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/instruction"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.25"/>
<!--    android:src="@drawable/rectangle"-->

    <!-- Red Circle -->
    <ImageButton
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@android:color/transparent"
        android:scaleType="centerInside"

        app:layout_constraintTop_toBottomOf="@+id/instruction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginStart="@dimen/_30sdp" />
<!--    android:src="@drawable/circle"-->

    <!-- Blue Triangle -->
    <ImageButton
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/image2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.25"
        android:layout_marginEnd="@dimen/_30sdp" />

<!--    android:src="@drawable/triangle"-->


    <!-- Next Button -->
    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="@color/white"
        android:background="@drawable/next_button_disable_background"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/inter_tight_semibold"
        app:layout_constraintTop_toBottomOf="@id/image3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="@dimen/_10sdp" />

    <!-- Center Overlay Image -->
    <ImageView
        android:id="@+id/centerOverlayImage"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:src="@drawable/timeup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>











