                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- Under image (revealed) -->
                    <ImageView
                        android:id="@+id/pickImage4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mountain4" />


                </FrameLayout>


            </GridLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/imagefull"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@+id/bottomgrid"
        android:background="@drawable/jigsaw_background"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/_10sdp">

        <!-- Upper cover image -->
        <ImageView
            android:id="@+id/coverImage4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/mountainwhole"
            android:clickable="true"
            android:focusable="true" />

        <!-- Description text at bottom -->
        <TextView
            android:id="@+id/imageDescription4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to View"
            android:textColor="@color/textcolorjigsaw"
            android:gravity="center"
            android:textSize="@dimen/_10sdp" /> <!-- Pink background -->

    </LinearLayout>


        <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/next_button_disable_background"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bottomgrid"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintVertical_bias="1.0"
                android:fontFamily="@font/inter_tight_semibold"/>





        <ImageView
            android:id="@+id/centerOverlayImage"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/complete"
            android:visibility="gone"
            android:scaleType="centerInside" />


        <!-- Full-screen overlay for pop-out image -->
        <FrameLayout
            android:id="@+id/imagePopupOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/popupImage"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/closePopup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cross"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"/>
        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

