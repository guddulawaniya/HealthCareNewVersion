<!--                            android:focusable="true" />-->

                        <!-- Container for cover image + text -->
<!--                        <LinearLayout-->
<!--                            android:id="@+id/imagefull"-->
<!--                            android:layout_width="@dimen/_80sdp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:orientation="vertical"-->
<!--                            android:layout_gravity="bottom|end"-->
<!--                            android:background="@drawable/jigsaw_background"-->
<!--                            android:paddingHorizontal="@dimen/_10sdp"-->
<!--                            android:paddingTop="@dimen/_10sdp">-->

<!--                            &lt;!&ndash; Upper cover image &ndash;&gt;-->
<!--                            <ImageView-->
<!--                                android:id="@+id/coverImage4"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="@dimen/_60sdp"-->
<!--                                android:scaleType="centerCrop"-->
<!--                                android:src="@drawable/mountainwhole"-->
<!--                                android:clickable="true"-->
<!--                                android:focusable="true" />-->

<!--                            &lt;!&ndash; Description text at bottom &ndash;&gt;-->
<!--                            <TextView-->
<!--                                android:id="@+id/imageDescription4"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:text="Tap to View"-->
<!--                                android:textColor="@color/textcolorjigsaw"-->
<!--                                android:gravity="center"-->
<!--                                android:textSize="@dimen/_10sdp" /> &lt;!&ndash; Pink background &ndash;&gt;-->

<!--                        </LinearLayout>-->
                    </FrameLayout>


                </GridLayout>

                <TextView
                    android:id="@+id/hintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="drag and drop here"
                    android:textColor="@color/blackhint"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_gravity="center" />
            </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomgrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/topgrid"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/img_background">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Pick from here"
                android:textColor="@color/black"
                android:paddingTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_15sdp"
                android:textSize="@dimen/_11sdp"/>

            <GridLayout
                android:id="@+id/pickgrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:columnCount="4"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:padding="@dimen/_2sdp"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- One card (repeat 8 times) -->
                <FrameLayout
                    android:id="@+id/pickcard1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- Under image (revealed) -->
                    <ImageView
                        android:id="@+id/pickImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mountain1" />

                </FrameLayout>

                <!--        card 2-->
                <FrameLayout
                    android:id="@+id/pickcard2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/_5sdp">

                    <!-- Under image (revealed) -->
                    <ImageView
                        android:id="@+id/pickImage2"
                        android:layout_width="match_parent"
