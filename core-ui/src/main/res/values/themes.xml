<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.Healthcare20" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:statusBarColor">@color/primaryColor</item>

    </style>


    <style name="TopRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="RoundedImage20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    <style name="RoundedImage10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>


    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomShapeAppearanceBottomSheet</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/CustomCornerShape</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomCornerShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Custom TimePicker Theme -->
    <style name="MyTimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>

    </style>

    <style name="MyTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/secondaryColor</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <!-- Custom DatePicker Style -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:headerBackground">@color/primaryColor</item>
        <item name="android:calendarTextColor">@color/secondaryColor</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
        <item name="android:datePickerMode">spinner</item>
    </style>


    <style name="Theme.Healthcare20" parent="Base.Theme.Healthcare20" />

    <style name="CountryCodeDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="CalendarWeekday" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="CalendarHeaderText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColor</item> <!-- your custom color -->
        <item name="android:textSize">20sp</item>              <!-- adjust as needed -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Bottom Navigation View -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>


    <style name="CustomFilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
        <item name="chipCornerRadius">50dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>



</resources>