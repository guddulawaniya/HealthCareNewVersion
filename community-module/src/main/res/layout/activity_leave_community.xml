<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LeaveCommunityActivity">

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back_btn_image" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Leaving “ Health and Fitness “"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="Before you leave, you must transfer your admin rights to another member."
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Select new admin"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <include
        android:id="@+id/custom_searchbar"
        layout="@layout/custom_search_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/communityMemberRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        tools:listitem="@layout/add_poeple_row_layout" />

    <include
        android:id="@+id/leaveGroupbtn"
        layout="@layout/custom_button"/>

</LinearLayout>