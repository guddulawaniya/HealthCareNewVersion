<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".callActivity.AudioCallActivity">



    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back_btn_image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:src="@drawable/profile_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20dp"
            android:text=""
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semibold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="calling"
            android:textColor="@color/hintColor"
            android:layout_gravity="center"
            android:fontFamily="@font/inter" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/speakerbtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/circle"
                android:padding="16dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/speaker_ic"
                app:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/callbtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/call_raject_btn_bg"
                android:padding="20dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/call_pick_ic"
                app:tint="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/muteMicbtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/circle"
                android:padding="16dp"
                android:src="@drawable/mic_icon"
                app:tint="@color/white" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>