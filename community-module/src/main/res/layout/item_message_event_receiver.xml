<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/message_reciver_bg"
        android:gravity="center">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/eventMainImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/party_event_image"
            app:shapeAppearanceOverlay="@style/CustomCornerShape"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Dance Night"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/blue_calender_icon"
                    app:tint="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventDateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Saturday, July 20"
                        android:textColor="@color/textColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/eventTimeDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="10:00AM- 12:00PM"
                        android:textColor="@color/textColor"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/eventTypeIcon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_outline_link"
                    app:tint="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/modeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Online"
                        android:textColor="@color/textColor"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/meetingLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="Meeting Link"
                        android:textColor="@color/textColor"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Confirm Attendance"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Decline"
                android:textColor="@color/red"
                android:paddingVertical="8dp"
                android:gravity="center"
                android:textSize="12dp" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sender_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile_sample_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joyprokash Sardar"
                android:textColor="@color/chatMessageColor"
                android:textSize="12dp"
                android:fontFamily="@font/inter_medium" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="1 hour ago"
                android:textColor="@color/chatMessageColor"
                android:textSize="9sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>