<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateEventNextActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_layout" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/onlineText"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/community_online_selected_bg"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Online"
                    android:textColor="@color/primaryColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/offlineText"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Offline"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/meetingLinkFieldtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="20dp"
                android:text="Meeting Link"
                android:textColor="@color/textColor"
                android:textSize="15sp" />

                <EditText
                    android:id="@+id/meetingLinkField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:fontFamily="@font/inter_medium"
                    android:drawableStart="@drawable/ic_outline_link"
                    android:hint="Paste Link here"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:drawablePadding="10dp"
                    android:textColorHint="@color/hintColor"
                    android:textSize="15dp" />

            <TextView
                android:id="@+id/locationFieldTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="20dp"
                android:text="Location"
                android:visibility="gone"
                android:textColor="@color/textColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/locationField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/inter_medium"
                android:hint="Location"
                android:visibility="gone"
                android:paddingVertical="12dp"
                android:drawableStart="@drawable/blue_location_icon"
                android:paddingStart="10dp"
                android:drawableTint="@color/grayTextColor"
                android:drawablePadding="10dp"
                android:textColorHint="@color/hintColor"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Date"
                android:textColor="@color/textColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/datePickTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/inter_medium"
                android:hint="Event Date"
                android:drawableStart="@drawable/blue_calender_icon"
                android:paddingVertical="12dp"
                android:paddingStart="8dp"
                android:drawableTint="@color/grayTextColor"
                android:drawablePadding="10dp"
                android:textColorHint="@color/hintColor"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Time"
                android:textColor="@color/textColor"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timePickTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Start Time"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/clock_icon"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:textColorHint="@color/hintColor"
                    android:textSize="15dp" />

                <AutoCompleteTextView
                    android:id="@+id/eventTimeDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/mingcute_sandglass_line"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/grayTextColor"
                    android:background="@drawable/edit_text_bg"
                    android:drawableEnd="@drawable/keyboard_arrow_down_20px"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Duration"
                    android:inputType="none"
                    android:focusable="false"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="12dp"
                    android:textColorHint="@color/hintColor"
                    android:textSize="15dp" />


            </LinearLayout>





        </LinearLayout>
        <include
            android:id="@+id/btninclude"
            layout="@layout/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


</LinearLayout>