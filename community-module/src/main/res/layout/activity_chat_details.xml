<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ChatDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="35dp"
                android:layout_margin="16dp"
                android:layout_height="35dp"
                android:src="@drawable/back_btn_image" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_height="150dp"
                android:src="@drawable/profile_sample_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:text="Health and Fitness"
                android:textColor="@color/textColor"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle"
                        android:padding="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/call_icon"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle"
                        android:padding="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:src="@drawable/video_call_icon"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Video Call"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_medium"/>
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:text="Shared Gallery"
                android:drawableEnd="@drawable/keyboard_arrow_right_24px"
                android:layout_marginTop="16dp"
                android:drawableTint="@color/black"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageRecylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/event_add_image_row_layout" />


            <TextView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:text="Common Community"
                android:layout_marginTop="16dp"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/add_user_icon"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Community"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/communityMemberRv"
                android:layout_marginTop="10dp"
                tools:itemCount="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/community_user_row_layout"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:text="Settings &amp; Actions"
                android:layout_marginTop="16dp"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:background="@drawable/notification_mute_bg"
                    android:padding="10dp"
                    android:src="@drawable/notifications_24px"
                    app:tint="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute Notifcations"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:background="@drawable/notification_mute_bg"
                    android:padding="10dp"
                    android:src="@drawable/delete_24px"
                    app:tint="@color/black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Conversation"
                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear all messages"
                        android:textColor="@color/textColor"
                        android:textSize="10sp"
                        android:fontFamily="@font/inter_semibold"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:background="@drawable/block_image_bg"
                    android:padding="10dp"
                    android:src="@drawable/logout_icon"
                    app:tint="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit Group"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semibold"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>