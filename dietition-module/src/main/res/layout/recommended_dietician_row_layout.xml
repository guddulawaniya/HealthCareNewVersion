<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="178dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/medical_types_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/doctorImage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/doctor_image" />

    <TextView
        android:id="@+id/tvDoctorNameAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Anika Sharma , RDN"
        android:textColor="@color/textColor"
        android:layout_marginTop="5dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/categoryDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="Sports Nutrition"
        android:textColor="@color/hintColor"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_outline_icon"/>
        <TextView
            android:id="@+id/starRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="4.5"
            android:textColor="@color/hintColor"
            android:textSize="10dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/bookConsultation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Consultation"
        android:minWidth="151dp"
        android:textAllCaps="false"
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:background="@drawable/button_circle_bg"
        android:textSize="10sp"/>




</LinearLayout>