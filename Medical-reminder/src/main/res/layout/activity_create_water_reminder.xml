<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CreateWaterReminderActivity">

    <!-- Top bar with back arrow + title -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/back_btn_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Set Water Reminder"
            android:textColor="@color/textColor"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="40dp">

            <!-- Reminder Frequency label -->
            <TextView
                android:id="@+id/tvReminderFreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Reminder Frequency"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <!-- Frequency option: Every Hour (selected) -->
            <LinearLayout
                android:id="@+id/option_every_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/water_log_card_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="13dp">

                <TextView
                    android:id="@+id/tvEveryHour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Every Hour"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/radioEveryHour"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/water_radio_btn_outline_bg" />
            </LinearLayout>

            <!-- Frequency option: Every 2 Hours (unselected) -->
            <LinearLayout
                android:id="@+id/option_2_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/water_log_card_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="13dp">

                <TextView
                    android:id="@+id/tvEvery2Hours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Every 2 Hours"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/radio2Hours"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/water_radio_btn_outline_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/water_log_card_bg"
                android:orientation="vertical"
                android:clickable="true"
                android:layout_marginTop="12dp"
                android:padding="13dp"
                android:focusable="true"
                android:layout_height="wrap_content">
                <!-- Frequency option: Custom Interval -->
                <LinearLayout
                    android:id="@+id/option_custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCustomInterval"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:text="Custom Interval"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/radioCustom"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/water_radio_btn_outline_bg" />

                </LinearLayout>

                <EditText
                    android:id="@+id/customInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g 30 min"
                    android:maxLength="5"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/hintColor"
                    android:backgroundTint="#33000000"/>

            </LinearLayout>


            <!-- Time Window -->
            <TextView
                android:id="@+id/tvTimeWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Time Window"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/timeRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Start Time -->
                <LinearLayout
                    android:id="@+id/startContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Start Time"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/startBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <TextView
                            android:id="@+id/tvStartTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="8:00AM"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/hintColor"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/clock_icon"
                            app:tint="@color/textColor" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <!-- End Time -->
                <LinearLayout
                    android:id="@+id/endContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/endBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_text_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <TextView
                            android:id="@+id/tvEndTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="10:00PM"
                            android:textColor="@color/textColor"
                            android:textColorHint="@color/hintColor"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/clock_icon"
                            app:tint="@color/textColor" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Amount Per Reminder -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Amount Per Reminder"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Selected pill (250ml) -->
                    <TextView
                        android:id="@+id/chip250"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="75dp"
                        android:paddingVertical="9dp"
                        android:gravity="center"
                        android:text="250ml"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <!-- Other options -->
                    <TextView
                        android:id="@+id/chip500"
                        android:layout_width="80dp"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:paddingVertical="9dp"
                        android:gravity="center"
                        android:text="500ml"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/chip700"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:paddingVertical="9dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="700ml"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/chipCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="9dp"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="Custom"
                        android:textSize="16sp" />

                </LinearLayout>
            </HorizontalScrollView>
            <EditText
                android:id="@+id/amountCustomInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g : 500ml"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="5"
                android:layout_marginTop="8dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/hintColor"
                android:backgroundTint="#33000000"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/custombtn"
        layout="@layout/custom_button"/>

</LinearLayout>
