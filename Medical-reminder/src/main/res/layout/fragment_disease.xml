<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.DiseaseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letâ€™s Start with Your Condition"
            android:textSize="20dp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/textColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell us which disease or condition this\nprescription is for"
            android:textSize="15dp"
            android:fontFamily="@font/inter"
            android:textColor="@color/textColor"/>


        <include
            android:id="@+id/include_search_bar"
            layout="@layout/custom_search_layout"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:chipSpacing="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:selectionRequired="false"
            app:singleSelection="false" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diseaseRecyclerview"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:listitem="@layout/dropdown_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnNext"
        android:layout_width="57dp"
        android:layout_gravity="right"
        android:layout_height="57dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/preferenceInactive"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/next_arrow"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow_image"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>
</LinearLayout>