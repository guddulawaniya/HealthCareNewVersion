<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogYourPeriodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <include
            android:id="@+id/customtoolbar"
            layout="@layout/custom_toolbar_layout"/>

        <LinearLayout
            android:id="@+id/startDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/period_select_date_bg"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/blue_calender_icon"
                app:tint="@color/pinkColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Start Date"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/startDate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Select Date"
                    android:fontFamily="@font/inter"
                    android:textSize="12sp"
                    android:textColor="@color/hintColor" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lastDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/period_select_date_bg"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/blue_calender_icon"
                app:tint="@color/pinkColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="End Date"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/lastdate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Select Date"
                    android:fontFamily="@font/inter"
                    android:textSize="12sp"
                    android:textColor="@color/hintColor" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Flow Intensity"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"
            android:textSize="16sp"
            android:textColor="@color/textColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lightTextView"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="Light"
                android:paddingVertical="10dp"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="@color/pinkColor" />

            <TextView
                android:id="@+id/moderateTextView"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:text="Moderate"
                android:background="@drawable/flow_intensity_bg"
                android:paddingVertical="10dp"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/heavyTextView"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:layout_width="wrap_content"
                android:text="Heavy"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="@color/pinkColor" />

        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="20dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/pink_button_bg"
        android:textSize="15sp"
        app:cornerRadius="10dp" />

</LinearLayout>