<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVaaccinationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_btn_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_semibold"
            android:layout_height="wrap_content"
            android:text="Add Vaaccination"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_semibold"
            android:layout_height="wrap_content"
            android:text="Vaccine Name"/>
        <EditText
            android:id="@+id/tvVaccineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Eg.. Plifoer BioN-Tech"
            android:textSize="15dp"
            android:textColorHint="@color/hintColor"
            android:paddingStart="10dp"
            android:background="@drawable/edit_text_bg"
            android:paddingVertical="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_semibold"
            android:layout_height="wrap_content"
            android:text="Disease/Purpose"/>
        <EditText
            android:id="@+id/tvPurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Eg.. COVID-19"
            android:textSize="15dp"
            android:textColorHint="@color/hintColor"
            android:paddingStart="10dp"
            android:background="@drawable/edit_text_bg"
            android:paddingVertical="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_semibold"
            android:layout_height="wrap_content"
            android:text="Last Vaccination Date"/>
        <TextView
            android:id="@+id/lastDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:hint="Select Date"
            android:textSize="15dp"
            android:drawableTint="@color/hintColor"
            android:drawableEnd="@drawable/blue_calender_icon"
            android:textColorHint="@color/hintColor"
            android:paddingStart="10dp"
            android:background="@drawable/edit_text_bg"
            android:paddingVertical="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/inter_semibold"
            android:layout_height="wrap_content"
            android:text="Next Vaccination Date"/>
        <TextView
            android:id="@+id/nextDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:hint="Select Date"
            android:textSize="15dp"
            android:drawableTint="@color/hintColor"
            android:drawableEnd="@drawable/blue_calender_icon"
            android:textColorHint="@color/hintColor"
            android:paddingStart="10dp"
            android:background="@drawable/edit_text_bg"
            android:paddingVertical="12dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="20dp"
        android:text="Save Vaccination"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:cornerRadius="10dp" />
</LinearLayout>