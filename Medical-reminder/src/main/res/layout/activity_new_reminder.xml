<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewReminderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Purpose of Reminder"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reminderTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/water_log_card_bg"
            android:fontFamily="@font/inter_medium"
            android:hint="e.g : Yoga Session"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Suggested Tags"
            android:textColor="@color/textColor"
            android:textSize="18sp" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:chipSpacing="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:selectionRequired="false"
            app:singleSelection="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Set Timing"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/reminder_set_time_bg"
            android:orientation="horizontal"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvOneTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:minWidth="92dp"
                    android:paddingVertical="8dp"
                    android:text="One-Time"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEveryday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:gravity="center"
                    android:minWidth="92dp"
                    android:text="Everyday"
                    android:textColor="#5E6960"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCustomdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:minWidth="92dp"
                    android:gravity="center"
                    android:text="Custom days"
                    android:textColor="#5E6960"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:drawablePadding="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:text="MON"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvTue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/water_log_card_bg"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="TUE"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvWed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/water_log_card_bg"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Wed"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvThu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/water_log_card_bg"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Thur"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvFri"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/water_log_card_bg"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Fri"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/water_log_card_bg"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Sat"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tvSun"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/water_log_card_bg"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/primaryColor"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="center"
                    android:text="Sun"
                    android:textSize="10sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/water_log_card_bg"
            android:drawableStart="@drawable/clock_icon"
            android:drawablePadding="10dp"
            android:hint="8:00AM"
            android:padding="13dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hintColor"
            android:textSize="15sp" />


    </LinearLayout>
    <include
        android:id="@+id/includedBtn"
        layout="@layout/custom_button" />

</LinearLayout>