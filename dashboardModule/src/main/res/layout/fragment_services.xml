<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".ui.dashboardfragments.ServicesFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/textColor"
        android:fontFamily="@font/inter_semibold"
        android:text="Services"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:strokeColor="#33000000"
        app:strokeWidth="0.52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/book_caretaker"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/trained_nurse_or_physiotherapist_at_home"
                    android:textColor="@color/hintColor"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBookNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/servicebtnColor"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/book_now"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="105dp"
                android:src="@drawable/book_caretaker_image" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:strokeColor="#33000000"
        app:strokeWidth="0.52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/book_medical_items"
                    android:textColor="@color/textColor"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter"
                    android:text="@string/oxygen_cylinders_beds_wheelchairs_more"
                    android:textColor="@color/hintColor"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/medicalOrderNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/order_now"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="105dp"
                android:src="@drawable/gas_calender_image" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_medium"
        android:text="Active Services"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activeRecylerview"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="false"
        tools:itemCount="2"
        tools:listitem="@layout/progress_service_row_layout"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_medium"
        android:text="History"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="118dp"
            android:layout_height="108dp"
            android:elevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@drawable/sample_image"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Caretaker"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Sam Dyson"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#DBFFDD"
                android:layout_margin="10dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:text="View Details"
                    android:textColor="@color/primaryColor"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


        </LinearLayout>
    </ScrollView>







</LinearLayout>