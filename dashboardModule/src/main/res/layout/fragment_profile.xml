<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.dashboardfragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/buttonColor"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="168dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:layout_marginTop="-85dp"
                android:src="@drawable/profile_sample_image"/>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nikunj_tyagi"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:fontFamily="@font/inter_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/care_seeker"
                android:background="@drawable/profile_care_seekar_bg"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="10sp"
                android:fontFamily="@font/inter"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:paddingVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/daily_boost_diet_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/profile_card_bg">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:padding="3dp"
                                android:src="@drawable/footsteps_icon" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/stepCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="2300"
                            android:textColor="@color/textColor"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_gravity="center"
                        android:text="@string/step_count"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/daily_boost_diet_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/profile_card_bg">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:padding="3dp"
                                android:src="@drawable/blood_presser_icon" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvBloodPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="120/80"
                            android:textColor="@color/textColor"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_gravity="center"
                        android:text="@string/blood_pressure"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/daily_boost_diet_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/profile_card_bg">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:padding="3dp"
                                android:src="@drawable/sugar_icon" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvSugarLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="72 to 108"
                            android:textColor="@color/textColor"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_gravity="center"
                        android:text="@string/sugar_level"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="11dp"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/edit_logo"
                            android:src="@drawable/edit_icon"
                            app:tint="@color/textColor" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:text="@string/edit_profile"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="27dp"
                            android:contentDescription="@string/next_arrow"
                            android:src="@drawable/right_arrow_icon"
                            app:tint="@color/textColor" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/preference"
                            android:src="@drawable/preference_icon"
                            app:tint="@color/textColor" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:text="@string/preference"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="27dp"
                            android:contentDescription="@string/next_arrow"
                            android:src="@drawable/right_arrow_icon"
                            app:tint="@color/textColor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/preference"
                            android:src="@drawable/donate_icon"
                            app:tint="@color/textColor" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:text="@string/donate"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="27dp"
                            android:contentDescription="@string/next_arrow"
                            android:src="@drawable/right_arrow_icon"
                            app:tint="@color/textColor" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/preference"
                            android:src="@drawable/subscription_icon"
                            app:tint="@color/textColor" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:text="@string/subscription"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="27dp"
                            android:contentDescription="@string/next_arrow"
                            android:src="@drawable/right_arrow_icon"
                            app:tint="@color/textColor" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/preference"
                            android:src="@drawable/about_icon"
                            app:tint="@color/textColor" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:text="@string/about"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="27dp"
                            android:contentDescription="@string/next_arrow"
                            android:src="@drawable/right_arrow_icon"
                            app:tint="@color/textColor" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/preference"
                            android:src="@drawable/support_icon"
                            app:tint="@color/textColor" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:text="@string/support"
                            android:textColor="@color/textColor"
                            android:fontFamily="@font/inter_semibold"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="27dp"
                            android:contentDescription="@string/next_arrow"
                            android:src="@drawable/right_arrow_icon"
                            app:tint="@color/textColor" />

                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/logoutbtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:contentDescription="@string/logo_out_icon"
                    android:src="@drawable/logout_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/log_out"
                    android:textColor="@color/red"
                    android:fontFamily="@font/inter_semibold"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>