<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/which_gender_do_you_more_closely_identify_with"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btninclude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:id="@+id/layoutMale"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/unselected_gender_bg"
            android:layout_height="70dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/male_image"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Male"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/maleSelectedIcon"
                android:layout_width="20dp"
                android:src="@drawable/selected_icon"
                android:visibility="gone"
                android:layout_height="20dp"
                app:tint="@color/buttonColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFemale"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/unselected_gender_bg"
            android:layout_height="70dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/femal_image"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Female"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/femaleSelectedIcon"
                android:layout_width="20dp"
                android:src="@drawable/selected_icon"
                android:visibility="gone"
                android:layout_height="20dp"
                app:tint="@color/buttonColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutOther"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/unselected_gender_bg"
            android:layout_height="70dp"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Others"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/othersSelectedIcon"
                android:layout_width="20dp"
                android:src="@drawable/selected_icon"
                android:visibility="gone"
                android:layout_height="20dp"
                app:tint="@color/buttonColor" />

        </LinearLayout>

    </LinearLayout>


    <include
        android:id="@+id/btninclude"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
