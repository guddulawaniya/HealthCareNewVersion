<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/verify_your_phone_number"
            android:textColor="@color/textColor"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvUserMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/enter_the_otp_sent_to_917467095730"
            android:textColor="@color/textColor"
            android:textSize="15sp" />


        <com.chaos.view.PinView
            android:id="@+id/PinView"
            style="@style/PinWidget.PinView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorWidth="2dp"
            app:itemCount="6"
            app:itemHeight="46dp"
            app:itemRadius="7.75dp"
            app:lineColor="#33000000"
            app:lineWidth="0.77dp"
            app:viewType="rectangle" />

        <TextView
            android:id="@+id/resendTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/resend_code_in_00_30"
            android:textColor="@color/grayTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/otpdammy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/enter_the_otp_sent_to_917467095730"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/i_have_read_and_agree_to_the_terms_conditions_and_privacy_policy"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:buttonTint="@color/check_box_color" />

    <include
        android:id="@+id/buttonNext"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />


</LinearLayout>