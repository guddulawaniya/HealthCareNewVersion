<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#32000000"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/hostpital_bed_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Hostpital Bed"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/featureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Fully electric, adjustable"
            android:layout_marginTop="2dp"
            android:textColor="@color/hintColor"
            android:textSize="12sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/itemTypeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#CEFBD1"
            app:cardCornerRadius="15dp">
            <TextView
                android:id="@+id/itemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:paddingVertical="5dp"
                android:text="For Donation"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:textColor="@color/buttonColor"
                android:textSize="12sp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/viewDetailsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:paddingVertical="5dp"
            android:text="View Details"
            android:layout_gravity="right"
            android:paddingHorizontal="10dp"
            android:textColor="@color/primaryColor"
            android:textSize="12sp"/>


    </LinearLayout>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>